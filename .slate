# setup: echo "source ~/dotfiles/.slate" > ~/.slate
# I currently have shift-alt-ctrl-cmd bound to the semicolon key via karabiner
bind f:shift;alt;ctrl;cmd focus 'Finder'
bind 1:shift;alt;ctrl;cmd focus 'Google Chrome'
bind 2:shift;alt;ctrl;cmd focus 'Code'
bind 3:shift;alt;ctrl;cmd focus 'iTerm2'
bind 4:shift;alt;ctrl;cmd focus 'VirtualBox'
bind 5:shift;alt;ctrl;cmd focus 'Messages'
bind 6:shift;alt;ctrl;cmd focus 'Oracle SQL Developer'
bind 7:shift;alt;ctrl;cmd focus 'Firefox'
# bind 8:shift;alt;ctrl;cmd focus 'Google Play Music Desktop Player'
bind 8:shift;alt;ctrl;cmd focus 'Spotify'
bind 9:shift;alt;ctrl;cmd focus 'TextEdit'

bind m:shift;alt;ctrl;cmd throw right resize
bind n:shift;alt;ctrl;cmd throw left resize
# fullscreen
bind u:shift;alt;ctrl;cmd:toggle move screenOriginX;screenOriginY screenSizeX;screenSizeY
