# f20 is configured to be right_alt in karabiner
alias modal f20
config modalEscapeKey i
# alias J f13
# alias J f13
# fullscreen:
bind f:${modal}:toggle move screenOriginX;screenOriginY screenSizeX;screenSizeY

# nudge bindings:h j k l are bound to left right up down in the vimium modal mode in karabiner

#bind right:${modal}:toggle  nudge +10% +0
#bind left:${modal}:toggle  nudge -10% +0
#bind up:${modal}:toggle  nudge +0   -10%
#bind down:${modal}:toggle  nudge +0   +10%
#
## Push Bindings:  these are actually bound to shift plus the following keys (ie. shift-j is j)
#bind l:${modal}:toggle  push right bar-resize:screenSizeX/2
#bind h:${modal}:toggle  push left  bar-resize:screenSizeX/2
#bind k:${modal}:toggle push up    bar-resize:screenSizeY/2
#bind j:${modal}:toggle  push down  bar-resize:screenSizeY/2
#
## the commands below make this kind of a pain... basically these are control plus hjkl
## I've re mapped a lot of the commands for modal mode in karaabiner
## Resize Bindings
#bind v:${modal}:toggle       resize +10% +0
#bind z:${modal}:toggle        resize -10% +0
#bind c:${modal}:toggle          resize +0   -10%
#bind x:${modal}:toggle        resize +0   +10%
#
## these are command plus hjkl
#bind q:${modal}:toggle  resize -10% +0 bottom-right
#bind r:${modal}:toggle   resize +10% +0 bottom-right
#bind e:${modal}:toggle     resize +0   +10% bottom-right
#bind w:${modal}:toggle   resize +0   -10% bottom-right

# I currently have shift-alt-ctrl-cmd bound to the semicolon key via karabiner
bind 1:shift;alt;ctrl;cmd focus 'Google Chrome'
bind 2:shift;alt;ctrl;cmd focus 'Atom'
bind 3:shift;alt;ctrl;cmd focus 'iTerm2'
bind 4:shift;alt;ctrl;cmd focus 'Finder'
bind 5:shift;alt;ctrl;cmd focus 'Messages'
bind 6:shift;alt;ctrl;cmd focus 'Chat'
bind 7:shift;alt;ctrl;cmd focus 'Kiwi for Gmail Lite'
bind 8:shift;alt;ctrl;cmd focus 'Google Play Music Desktop Player'
bind 9:shift;alt;ctrl;cmd focus 'BusyCal'

bind m:shift;alt;ctrl;cmd throw right resize
bind n:shift;alt;ctrl;cmd throw left resize
